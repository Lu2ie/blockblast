<body>
    <div class="overlay" id="overlay"></div>
    
    <div class="container">
        <h1>ðŸŽ® Block Blast</h1>
        
        <div class="score-board">
            <div class="score-item">
                Score: <span id="score">0</span>
            </div>
            <div class="score-item">
                Level: <span id="level">1</span>
            </div>
            <div class="score-item">
                Moves: <span id="moves">0</span>
            </div>
        </div>

        <div class="game-board" id="gameBoard"></div>

        <div class="block-selector">
            <h3>NÃ¤chste BlÃ¶cke:</h3>
            <div class="next-blocks" id="nextBlocks"></div>
        </div>

        <div class="controls">
            <button class="btn-primary" onclick="game.newGame()">Neues Spiel</button>
            <button class="btn-primary" onclick="game.undo()">RÃ¼ckgÃ¤ngig</button>
            <button class="btn-danger" onclick="game.clearSelected()">LÃ¶schen</button>
        </div>
    </div>

    <div class="game-over" id="gameOverModal">
        <h2>Spiel Vorbei!</h2>
        <p>Dein Endstand: <strong id="finalScore">0</strong></p>
        <button class="btn-primary" onclick="game.newGame()">Nochmal spielen</button>
    </div>

    <script>
        class BlockBlast {
            constructor() {
                this.gridSize = 6;
                this.grid = [];
                this.score = 0;
                this.level = 1;
                this.moves = 0;
                this.history = [];
                this.nextBlocks = [];
                this.selectedCells = [];
                this.colors = ['#FF6B6B', '#4ECDC4', '#45B7D1', '#FFA07A', '#98D8C8', '#F7DC6F'];
                this.init();
            }

            init() {
                this.grid = Array(this.gridSize * this.gridSize).fill(0);
                this.history = [];
                this.selectedCells = [];
                this.score = 0;
                this.level = 1;
                this.moves = 0;
                this.generateNextBlocks();
                this.render();
            }

            generateNextBlocks() {
                this.nextBlocks = [];
                for (let i = 0; i < 3; i++) {
                    this.nextBlocks.push(Math.floor(Math.random() * 7) + 1);
                }
            }

            placeBlock(index, blockSize) {
                let saved = JSON.parse(JSON.stringify(this.grid));
                
                if (this.grid[index] !== 0) return false;
                
                // Platziere Block
                for (let i = 0; i < blockSize; i++) {
                    if (index + i < this.grid.length) {
                        this.grid[index + i] = blockSize;
                    }
                }
                
                if (this.isValid()) {
                    this.history.push(saved);
                    this.moves++;
                    this.removeLines();
                    this.generateNextBlocks();
                    this.updateLevel();
                    return true;
                } else {
                    this.grid = saved;
                    return false;
                }
            }

            removeLines() {
                let rowsCleared = 0;
                const newGrid = [...this.grid];
                
                // PrÃ¼fe auf volle Reihen
                for (let row = 0; row < this.gridSize; row++) {
                    let isFull = true;
                    for (let col = 0; col < this.gridSize; col++) {
                        if (newGrid[row * this.gridSize + col] === 0) {
                            isFull = false;
                            break;
                        }
                    }
                    if (isFull) {
                        for (let col = 0; col < this.gridSize; col++) {
                            newGrid[row * this.gridSize + col] = 0;
                        }
                        rowsCleared++;
                    }
                }
                
                this.grid = newGrid;
                this.score += rowsCleared * 100;
            }

            isValid() {
                return !this.isGameOver();
            }

            isGameOver() {
                for (let i = 0; i < this.grid.length; i++) {
                    if (this.grid[i] === 0) return false;
                }
                return true;
            }

            updateLevel() {
                this.level = Math.floor(this.score / 500) + 1;
            }

            clickCell(index) {
                if (this.grid[index] !== 0) return;
                
                if (this.selectedCells.includes(index)) {
                    this.selectedCells = this.selectedCells.filter(i => i !== index);
                } else {
                    this.selectedCells.push(index);
                }
                
                this.render();
            }

            clearSelected() {
                this.selectedCells = [];
                this.render();
            }

            undo() {
                if (this.history.length > 0) {
                    this.grid = this.history.pop();
                    this.moves--;
                    this.render();
                }
            }

            newGame() {
                document.getElementById('gameOverModal').classList.remove('show');
                document.getElementById('overlay').classList.remove('show');
                this.init();
                this.render();
            }

            render() {
                const board = document.getElementById('gameBoard');
                board.innerHTML = '';
                
                for (let i = 0; i < this.grid.length; i++) {
                    const cell = document.createElement('div');
                    cell.className = 'grid-cell';
                    
                    if (this.grid[i] !== 0) {
                        cell.classList.add('filled');
                        cell.textContent = this.grid[i];
                    } else {
                        if (this.selectedCells.includes(i)) {
                            cell.classList.add('selected');
                        }
                    }
                    
                    cell.style.background = this.grid[i] !== 0 ? 
                        this.colors[(this.grid[i] - 1) % this.colors.length] : 
                        (this.selectedCells.includes(i) ? '#ffd700' : '#e0e0e0');
                    
                    cell.onclick = () => this.handleCellClick(i);
                    board.appendChild(cell);
                }
                
                document.getElementById('score').textContent = this.score;
                document.getElementById('level').textContent = this.level;
                document.getElementById('moves').textContent = this.moves;
                
                this.renderNextBlocks();
                
                if (this.isGameOver()) {
                    this.showGameOver();
                }
            }

            renderNextBlocks() {
                const nextBlocksDiv = document.getElementById('nextBlocks');
                nextBlocksDiv.innerHTML = '';
                
                this.nextBlocks.forEach(size => {
                    const block = document.createElement('div');
                    block.className = 'next-block';
                    block.textContent = 'â–ˆ'.repeat(size);
                    block.style.color = this.colors[size % this.colors.length];
                    nextBlocksDiv.appendChild(block);
                });
            }

            handleCellClick(index) {
                if (this.selectedCells.length === 0) {
                    this.clickCell(index);
                } else {
                    const blockSize = this.selectedCells.length;
                    if (this.placeBlock(index, blockSize)) {
                        this.selectedCells = [];
                        this.render();
                    }
                }
            }

            showGameOver() {
                document.getElementById('finalScore').textContent = this.score;
                document.getElementById('gameOverModal').classList.add('show');
                document.getElementById('overlay').classList.add('show');
            }
        }

        const game = new BlockBlast();
    </script>
</body>
</html>
