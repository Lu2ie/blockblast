<h1>Reaktionsspiel</h1>
<p>Klicke auf "Start" und warte bis das Feld grÃ¼n wird!</p>

<button onclick="startGame()">Start</button>

<div id="box">Warte...</div>

<div id="result"></div>

<script>
let startTime;
let timeout;
let gameActive = false;

function startGame() {
    const box = document.getElementById("box");
    const result = document.getElementById("result");

    result.textContent = "";
    box.style.backgroundColor = "red";
    box.textContent = "Warte...";
    gameActive = false;

    const randomDelay = Math.random() * 3000 + 2000; // 2â€“5 Sekunden

    timeout = setTimeout(() => {
        box.style.backgroundColor = "green";
        box.textContent = "JETZT KLICKEN!";
        startTime = new Date().getTime();
        gameActive = true;
    }, randomDelay);
}

document.getElementById("box").addEventListener("click", function() {
    const box = document.getElementById("box");
    const result = document.getElementById("result");

    if (!gameActive) {
        clearTimeout(timeout);
        result.textContent = "Zu frÃ¼h! ðŸ˜… Versuch es nochmal.";
        box.textContent = "Zu frÃ¼h!";
        return;
    }

    const reactionTime = new Date().getTime() - startTime;
    result.textContent = "Deine Reaktionszeit: " + reactionTime + " ms";
    box.textContent = "Gut gemacht!";
    gameActive = false;
});
</script>

